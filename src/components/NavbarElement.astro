---
interface Props {
    title: string;
    href: string;
}

const {href, title} = Astro.props;
---
<li>
    <a href={href} class="block px-3 py-2 rounded-lg text-white text-2xl font-semibold tracking-wide hover:bg-white hover:text-black focus:bg-gray-100 focus:text-black active:bg-gray-100 active:text-black transition">{title}</a>
</li>