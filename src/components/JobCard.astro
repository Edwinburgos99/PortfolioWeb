---
interface props{
    job: Job
}

const {date, title, titleJob, description}= Astro.props.job
---
<ul class="w-full max-w-3xl space-y-12">
  <div class="absolute top-0 h-full w-1 bg-white rounded-full"></div>
  <li class="relative flex items-start pl-10 text-left">
    <div class="absolute left-0.5 top-2 w-4 h-4 rounded-full bg-green-600 shadow-lg -translate-x-1/2"></div>
    <div>
      <h3 class="text-2xl font-bold text-white">{title}</h3>
      <h4 class="mt-1 text-xl font-semibold text-green-400">{titleJob}</h4>
      <time class="mt-1 block text-lg text-green-400">{date}</time>
      <p class="mt-3 text-xl text-gray-200 leading-relaxed">{description}</p>
    </div>
  </li>
</ul>