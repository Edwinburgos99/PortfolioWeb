---
interface props{
    job: Job
}

const {date, title, description}= Astro.props.job
---

<li class="ms-4 border-l-2 border-custom-purple pl-4 relative">
    <div class="absolute -left-2 top-2 w-3 h-3 bg-custom-purple rounded-full"></div>
    <time class="mb-1 text-sm font-medium text-gray-600 dark:text-gray-600">{date}</time>
    <h3 class="text-lg font-bold text-gray-900 dark:text-gray-800">{title}</h3>
    <p class="text-base text-gray-700 dark:text-gray-600">{description}</p>
</li>