---
import Skill from '../components/Skill.astro';
interface Props {
    project: Project;
    index: number;
}

const {index, project} = Astro.props;
const {title, description, urLImg, usedSkills, link } = project;

const itShouldbeReverse = index % 2 == 0;
const className= itShouldbeReverse ? 
"w-full flex flex-col items-center md:items-start md:flex-row gap-4 md:gap-12 max-w-screen-md" : "w-full flex flex-col items-center md:items-start md:flex-row-reverse gap-4 md:gap-12 max-w-screen-md";
---

<div class={className}>
    <img src={urLImg} alt="Project image" width={128} height={128} class="w-full object-contain object-center md:max-w-80"/>
    <div class="flex flex-col gap-2 flex 1">
        <div class="flex flex-col">
            <h3 class="text-white text-xl md:text-2xl lg:text-3xl font-semibold">{title}</h3>
            <a href={link} class=" underline text-blue-600 italic"></a>
        </div>
        <div class="mt-2 flex flex-wrap gap-2">
            {usedSkills.map((usedSkill) => <Skill skill={usedSkill} />)}
        </div>
        <p class="text-pretty text-xl">{description}</p>
    </div>
</div>